{
  "type": "carousel",
  "contents": [
    {
      "type": "bubble",
      "size": "micro",
      "direction": "ltr",
      "header": {
        "type": "box",
        "layout": "vertical",
        "contents": [
          {
            "type": "text",
            "text": "活動",
            "align": "start",
            "weight": "bold",
            "size": "xxl",
            "style": "normal",
            "decoration": "none",
            "gravity": "top"
          }
        ]
      },
      "body": {
        "type": "box",
        "layout": "vertical",
        "contents": [
          {
            "type": "button",
            "action": {
              "type": "datetimepicker",
              "label": "新增行程",
              "data": "add_schedule",
              "mode": "datetime"
            },
            "style": "primary"
          },
          {
            "type": "button",
            "action": {
              "type": "postback",
              "label": "查詢行程",
              "data": "search_schedule"
            }
          },
          {
            "type": "button",
            "action": {
              "type": "postback",
              "label": "新增記事",
              "data": "add_note"
            },
            "style": "primary"
          },
          {
            "type": "button",
            "action": {
              "type": "postback",
              "label": "查詢記事",
              "data": "searchd_note"
            }
          },
          {
            "type": "button",
            "action": {
              "type": "postback",
              "label": "新增固定行程",
              "data": "add_routine",
              "displayText": "新增固定行程"
            },
            "style": "primary"
          },
          {
            "type": "button",
            "action": {
              "type": "postback",
              "label": "查詢固定行程",
              "data": "search_routine",
              "displayText": "查詢固定行程"
            }
          }
        ],
        "spacing": "none",
        "margin": "none",
        "offsetBottom": "none",
        "paddingBottom": "none"
      },
      "styles": {
        "hero": {
          "separator": true
        },
        "body": {
          "separator": true
        }
      }
    }
  ]
}